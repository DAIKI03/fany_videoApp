<%= form_for(video) do |f| %>
  <% if video.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(video.errors.count, "error") %></h2>

      <ul>
      <% video.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
  <div class="field">
    <%= f.label :url %>
    <%= f.text_field :url, :placeholder => "(例)https://www.youtube.com/watch?v=CdXesX6mYUE"%>
  </div>

  <div class="field content-field">
    <%= f.label :description %>
    <%= f.text_area :description, :maxlength => "120", :placeholder => "動画の説明など伝えたいことを書いてみよう！"%>
  </div>

  <div class="actions primary-btn btn2">
    <%= f.submit :value => "投稿する"%>
  </div>
</div>  
<% end %>